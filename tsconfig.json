{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",        // your .ts sources
    "outDir": "dist",        // match webpack output
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["src/test"]
}
